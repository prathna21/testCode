<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.pung.codemonkeys.SearchFragment">


    <TextView
        android:id="@+id/searchTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="Search"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/breweryNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchTextView"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:hint="Brewery Name"
        android:text="" />

    <EditText
        android:id="@+id/breweryZipEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breweryNameEditText"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:hint="Brewery Zip"
        android:text="" />

    <EditText
        android:id="@+id/breweryCityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breweryZipEditText"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:hint="Brewery City"
        android:text="" />

    <EditText
        android:id="@+id/beerTypeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breweryCityEditText"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:hint="Beer Type"
        android:text="" />

    <EditText
        android:id="@+id/beerNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beerTypeEditText"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:hint="Beer Name"
        android:text="" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beerNameEditText"
        android:layout_centerInParent="true"
        android:text="Search" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/brewery_search_result_listView2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:dividerHeight="10dp"
        android:divider="#d1d1d1"></ListView>
</RelativeLayout>
